<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionOne"
    android:background="@drawable/gradient_background">

    <Button
        android:id="@+id/q1b1"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:text="I am worried for the baby so I rush to my baby"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />

    <Button
        android:id="@+id/q1b2"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:text="I get up and take care without thinking much"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q1b1"
        app:layout_constraintVertical_bias="0.047" />

    <Button
        android:id="@+id/q1b3"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:text="I don't wnant to miss the show so I don't want to get up to get the baby"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501
"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q1b2"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/q1b4"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        android:text="I want to get up to get the baby but I am exausted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q1b3"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:textSize="20sp"
        android:text="How exactly do you feel about this situation?"
        android:textColor="#32132B"
        app:layout_constraintBottom_toTopOf="@+id/q1b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>