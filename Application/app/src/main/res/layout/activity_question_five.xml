<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionFive"
    android:background="@drawable/gradient_background">

    <Button
        android:id="@+id/q5b1"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        android:text="I don't regret anything in life and I'm happy with things as it is"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/q5b2"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        android:text="I may regret specially when things go out of my times"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q5b1"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/q5b3"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        android:text="I'm unhappy most of the times but going with the flow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q5b2"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/q5b4"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:fontFamily="@font/lora_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#795D71"
        android:text="I'm miserable and miss my old life and regret my decision"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q5b3"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:textSize="20sp"
        android:text="How do you feel now?"
        android:textColor="#32132B"
        app:layout_constraintBottom_toTopOf="@+id/q5b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>